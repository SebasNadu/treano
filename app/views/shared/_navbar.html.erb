<div class="navbar navbar-top ms-auto sticky-top">
  <div class="container-fluid d-flex d-row justify-content-end">
    <% t = Time.now %>
    <% if t.hour < 12 %>
      <p class="fs-2 fw-light text-light me-auto my-0">Good moring <%= current_user.username %></p>
    <% elsif t.hour >= 12 %>
      <p class="fs-2 fw-light text-light me-auto my-0">Welcome back</p>
    <% elsif t.hour > 18 %>
      <p class="fs-2 fw-light text-light me-auto my-0">Welcome back</p>
    <% end %>
      <ul class=" d-flex d-row list-unstyled align-items-center justify-content-center m-0">
        <% if user_signed_in? %>
          <li class="nav-item">
            <div class="btn-group dropstart">
              <button type="button" class="btn btn-ghost dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <%= inline_svg_tag 'svg/search.svg', style: "font-size: 1.5rem;" %>
              </button>
              <div class="dropdown-menu p-0 bg-transparent rounded">
                <%= simple_form_for :search, url: root_path, method: :get, input_html: { class: 'w-100'} do |f| %>
                  <div class="search-form-control form-group p-0 bg-transparent">
                    <input class="form-control string required bg-trans" type="text" name="search[query]" id="search_query" placeholder="Search" />
                    <button name="button" type="submit" class="btn btn-input">
                      <i class="fas fa-search"></i> Search
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          </li>
          <li class="nav-item">
            <div class="dropdown-center">
              <button type="button" class="btn btn-ghost dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                <%= inline_svg_tag 'svg/grid.svg', style: "font-size: 1.5rem;" %>
              </button>
              <form class="dropdown-menu dropdown-menu-end p-2 bg-trans border-0">
                <div class="mb-3">
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="dropdownCheck2">
                    <label class="form-check-label" for="dropdownCheck2">
                    </label>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
              </form>
            </div>
          </li>
          <li class="nav-item">
            <button class="btn btn-ghost">
              <%= inline_svg_tag 'svg/bell.svg', style: "font-size: 1.5rem;" %>
            </button>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <%= inline_svg_tag 'svg/log-in.svg', style: "font-size: 1.5rem;" %>
            <% end %>
          </li>
        <% end %>
      </ul>
  </div>
</div>

<%= render "shared/sidebar" %>
