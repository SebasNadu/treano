 <%= simple_form_for review,
  html: {
    class: review.errors.any? ? "" : "d-none",
    data: {
      insert_in_list_target: "formEdit",
      action: "submit->insert-in-list#update"
      }
    } do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Save changes", class: "btn btn-primary" %>
  <% end %>
