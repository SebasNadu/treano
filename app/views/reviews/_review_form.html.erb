<div class="bg-trans p-3 mx-0 rounded" data-insert-in-list-target="infos">
  <h3>Create review</h3>
  <hr>
  <%= simple_form_for([reviewable, review], class: "",
  data: {
    controller: "star-form",
    insert_in_list_target: "form",
    action: "submit->insert-in-list#send"
    }) do |f| %>
      <%= f.input :rating, collection: (1..5).to_a, label: "Rating", input_html: {data: { controller: "star-rating"} } %>
      <%= f.input :content %>
      <%= f.submit "Add", class: "btn btn-primary w-100" %>
   <% end %>
</div>
