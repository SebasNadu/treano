<div class="dashboard-banner m-0 p-0 mt-n5 position-fixed" style="">
</div>

<div class="container-fluid m-0 px-2 ps-sm-3 pt-4">
  <h1 class="fs-1 fw-bold px-2"><%= @user.username %></h1>
  <div class="info-box p-2 p-sm-4">
    <div class="row row-cols-1 row-cols-sm-2">
      <div class="col">
        <div class="p-3 info-h">
          <div class="row">
            <div class="col-6 text-center">
              <h3 class="fw-bolder mb-3 trans-text">Info</h3>
              <% if @user.avatar.key.nil? %>
                <%= image_tag "user.svg", class: "avatar-xl dropdown-toggle bg-secondary p-1", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <% else %>
                <%= cl_image_tag @user.avatar.key, class: "avatar-xl", :gravity=>"face", :height=>36, :width=>36, :crop=>"thumb", :zoom=>"0.5" %>
              <% end %>
            </div>
            <div class="col">
              <h5 class="m-0 mt-2"><%= @user.first_name %> <%= @user.last_name %></h5>
              <small>Member since</small>
              <small class=""><%= @user.created_at.strftime("%B %Y") %></small>
              <hr>
              <h5 class="m-0">Bio</h5>
              <small class="m-0"><%= @user.bio %></small>
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="p-3 info-h">
          <h3 class="m-0 trans-text fw-bolder text-center">Stats</h3>
          <div class="d-flex justify-content-center align-items-center mb-2">
            <p class="trans-text m-1 px-2 fw-bolder bg-secondary"><%= @reviews %></p>
            <p class="m-1">Reviews</p>
            <p class="trans-text m-1 px-2 fw-bolder bg-secondary"><%= @lists.count %></p>
            <p class="m-1">Lists</p>
            <p class="trans-text m-1 px-2 fw-bolder bg-secondary"><%= @user.reputation_score %></p>
            <p class="m-1">Rank</p>
          </div>
          <h5>Badges - completed challenges </h5>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="row m-0 px-2 ps-sm-3 pb-4">
  <div class="lists-container d-flex flex-column flex-sm-row justify-content-center align-items-center gap-3">
    <div class="section-titel w-75 gap-3 d-flex flex-row flex-sm-column align-items-center justify-content-around">
      <h2 class="">My lists</h2>
      <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#new_list_modal">
        Create one
      </button>
      <%= link_to "All lists", "#", class: "btn btn-outline-primary" %>
    </div>
    <div class="lists-scroller">
      <div class="lists-group">
      <% if @lists.present? %>
        <% @lists.each do |list| %>
          <div class="lists-element">
            <% if list.cover_picture.present? %>
            <div class="list-card d-flex align-items-end justify-content-center" style="background-image: url('<%= list.cover_picture.key %>');">
              <div class="flex-column list-h text-center bg-trans-0 mt-auto">
                <h4 class=""><%= list.list_name %></h4>
                <div class="btn btn-outline-info">
                  <span class=""><%= pluralize(list.list_items.size, "Item") %></span>
                </div>
                <%= link_to list_path(list), class: "btn btn-outline-success" %>
              </div>
            </div>
            <% else %>
              <% if list.list_items.present? %>
              <div class="list-card d-flex align-items-end justify-content-center" style="background-image: url('<%= list.list_items.first.listable.backdrop_url %>');">
                <div class="flex-column list-h text-center bg-trans-0 align-items-center justify-content-center">
                  <h4 class=""><%= list.list_name %></h4>
                  <div class="d-flex w-100 flex-row align-items-center justify-content-evenly">
                    <div class="btn btn-outline-info">
                      <span class=""><%= pluralize(list.list_items.size, "Item") %></span>
                    </div>
                    <%= link_to "Open it", list_path(list), class: "btn btn-outline-success" %>
                  </div>
                </div>
              </div>
              <% else %>
              <div class="list-card d-flex align-items-end justify-content-center" style="background-image: url('<%= image_path "list-banner" %>');">
                <div class="flex-column list-h text-center bg-trans-0 align-items-center justify-content-center">
                  <h4 class=""><%= list.list_name %></h4>
                  <div class="d-flex w-100 flex-row align-items-center justify-content-evenly">
                    <div class="btn btn-outline-info">
                      <span class=""><%= pluralize(list.list_items.size, "Item") %></span>
                    </div>
                    <%= link_to "Open it", list_path(list), class: "btn btn-outline-success" %>
                  </div>
                </div>
              </div>
              <% end %>
            <% end %>
          </div>
          <% end %>
        <% else %>
          <div class="lists-element">
            <div class="list-card d-flex align-items-end justify-content-center" style="background-image: url('<%= image_path "list-banner" %>');">
              <div class="row w-100 h-25 text-center bg-trans-0 align-items-center justify-content-center">
                <h4 class="">Create your first list</h4>
              </div>
            </div>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "lists/list_form", list: @new_list %>

<div class="info-box p-2 p-sm-4">
  <h3 class="m-0 trans-text fw-bolder text-center mb-3">My reviews</h3>
  <div class="row row-cols-1 row-cols-sm-2">
    <% user_reviews = current_user.reviews %>
    <% user_reviews.each do |review| %>
      <div class="col">
        <div class="row">
          <div class="col-11">
            <%= render "reviews/review", review: review %>
          </div>
          <div class="col-1 d-flex flex-column align-items-center justify-content-center ps-0">
            <button class="btn btn-ghost" aria-label="Edit movie" data-action="click->insert-in-list#displayForm">
              <%= render "svg/edit" %>
            </button>
            <%= render "reviews/edit_review", class: "d-none", review: review %>
            <%= link_to review_path(review), class: "btn btn-ghost",
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
              <%= render "svg/trash" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


