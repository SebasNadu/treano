<% @airly_tvs.size %> 
<% @popular_tvs.size %>
<% @toprated_tvs.size %>
<% @weeklytrends_tvs.size %>
<% @popular_movies.size %>
<% @toprated_movies.size %>
<% @weeklytrends_movies.size %>
