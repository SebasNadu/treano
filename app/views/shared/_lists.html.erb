<div class="container">
  <% @lists.each do |list| %>
  <ul>
    <li>
      <p><%= list.list_name %></p>
      <p><%= list.description %></p>
      <p><%= list.votes %></p>
      <p><%= link_to "See more", list_path(list) %></p>
      <% if list.user.id == current_user.id %>
      <p><%= link_to "Edit list", edit_list_path(list) %></p>
      <%= link_to "Delete",
      list_path(list),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
      <% end %>
    </li>
  </ul>
  <% end %>
</div>
