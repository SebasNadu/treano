<div class="container">
  <h4 class="py-3">This is a movie show</h4>

  <div>
    <p><%= @movie.title %></p>
    <p><%= @movie.country_of_origin %></p>
    <p><%= @movie.release_date %></p>
    <p><%= @movie.overview %></p>
    <p><%= @movie.rating_average %></p>
    <p><%= link_to "Home", root_path %>
  </div>

  <%#= render "shared/new_list_item", locals: { listable: @listable, list_item: @list_item } %>

  <%= render "shared/new_review", locals: { reviewable: reviewable, review: review } %>


  <% @movie.reviews.each do |review| %>
  <p><%= review.user.username %></p>
  <p><%= review.rating %></p>
  <p><%= review.content %></p>
  <p><%= link_to "Delete",
    review_path(review),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
  <hr>
  <% end %>
</div>
