<div class="info p-1">
  <div class=" text-center inside-info">
    <p class="line-clamp-s mb-1"><%= movie[:title] %></p>
    <% if movie[:year].present? %>
    <div class="d-flex flex-row flex-wrap justify-content-center mb-1">
      <small class="small-inside-card "><span class="pe-1"><%= movie[:year] %></span>•</small>
      <small class="small-inside-card "><span class="ps-1"><%= movie[:runtime] %> min</span>•</small>
      <% movie[:genre_names][0..-2].each do |genre| %>
        <small class="small-inside-card "><span class="ps-1"><%= genre %>,</small>
      <% end %>
      <small class="small-inside-card "><span class="ps-1"><%= movie[:genre_names][-1] %> •</small>
      <% if movie[:us_rating].present? %>
        <small class="small-inside-card "><span class="trans-text rounded px-1 mx-1 fw-semibold"><%= movie[:us_rating] %></span></small>
      <% end %>
    </div>
    <% if movie[:tagline].present? %>
      <small class="small-inside-card mb-1 fw-semibold text-center line-clamp-s">“<%= movie[:tagline] %>„</small>
    <% end %>
    <div class="d-flex flex-row flex-wrap justify-content-center">
      <small class="small-inside-card square-score-inv rounded px-1 fw-semibold me-1"><%= movie[:rating_average] %> </small>
      <small class="small-inside-card square-score-inv rounded px-1 fw-semibold me-1"><%= movie[:critic_score] %>% </small>
      <small class="small-inside-card square-score-inv rounded fw-semibold px-1"><%= render 'svg/trending-up' %> <%= movie[:popularity].round(1) %></small>
    </div>
  <% else %>
    <div class="d-flex flex-row flex-wrap align-items-center justify-content-center">
      <small class="small-inside-card square-score-inv rounded fw-semibold px-1 mx-1"><%= movie[:release_date][0..3] %></small>
      <small class="small-inside-card square-score-inv rounded mx-1 px-1 fw-semibold"><%= movie[:rating_average].round(1) %> </small>
    </div>
   <small class="small-inside-card line-clamp mt-1"><%= movie[:overview] %></small>
  <% end %>
  </div>
</div>
